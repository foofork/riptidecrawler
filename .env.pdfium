# Pdfium Library Configuration
# Source this file before running PDF-enabled applications:
# source .env.pdfium

# Linux library path
export LD_LIBRARY_PATH=/usr/local/lib:${LD_LIBRARY_PATH}

# Optional: Enable PDF feature explicitly
# export CARGO_FEATURES=pdf

# Optional: Pdfium debug logging
# export PDFIUM_LOG_LEVEL=debug

# Verify installation
echo "âœ“ Pdfium environment configured"
echo "  Library path: $LD_LIBRARY_PATH"

# Quick verification
if ldconfig -p 2>/dev/null | grep -q pdfium; then
    echo "  Status: libpdfium.so found in system"
else
    echo "  Warning: libpdfium.so not found - run scripts/install-pdfium.sh"
fi
